{
  "name": "line-follower-simulator",
  "version": "0.1.0",
  "description": "Web-based line follower robot simulator with physics-based optimization",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:wasm": "cd cpp && mkdir -p build && cd build && emcmake cmake .. && emmake make",
    "lint": "eslint src --ext .js,.svelte",
    "format": "prettier --write 'src/**/*.{js,svelte,css,html}'"
  },
  "dependencies": {
    "three": "^0.160.0",
    "dexie": "^3.2.4",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "svelte": "^4.2.8",
    "vite": "^5.0.11",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "vitest": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frankalcantara/LineFollower.git"
  },
  "keywords": [
    "robotics",
    "simulator",
    "line-follower",
    "webassembly",
    "svelte",
    "three.js",
    "optimization"
  ],
  "author": "Frank Alcantara",
  "license": "MIT"
}
